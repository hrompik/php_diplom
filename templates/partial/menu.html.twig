<div class="Header-categories">
    <div class="CategoriesButton">
        <div class="CategoriesButton-title">
            <div class="CategoriesButton-icon">
                <img src="{{ asset('/assets/img/icons/allDep.svg') }}" alt="allDep.svg"/>
            </div>
            <span class="CategoriesButton-text">Категории</span>
            <div class="CategoriesButton-arrow">
            </div>
        </div>
        <div class="CategoriesButton-content">
            {% for category in categories %}
                <div class="CategoriesButton-link">
                    <a href="{{ path('app_catalog') }}?categoryId={{ category.id }}">
                        <div class="CategoriesButton-icon">
                            <img src="{{ uploaded_asset('category_uploads_url',category.icon) }}"
                                 alt="{{ category.icon }}"/>
                        </div>
                        <span class="CategoriesButton-text">{{ category.name }}</span>
                    </a>
                    {% if category.children|length > 0 %}
                        <a class="CategoriesButton-arrow" href="#"></a>
                        <div class="CategoriesButton-submenu">
                            {% for subCategory in category.children %}
                                <a href="{{ path('app_catalog') }}?categoryId={{ subCategory.id }}"
                                   class="CategoriesButton-link">
                                    <div class="CategoriesButton-icon">
                                        <img src="{{ uploaded_asset('category_uploads_url',subCategory.icon) }}"
                                             alt="{{ subCategory.icon }}"/>
                                    </div>
                                    <span class="CategoriesButton-text">{{ subCategory.name }}</span>
                                </a>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    </div>
</div>